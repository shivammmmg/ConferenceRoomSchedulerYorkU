<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.HBox?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="scenario1.controller.RegisterController"
            stylesheets="@../css/register.css">

    <!-- FULLSCREEN BACKGROUND -->
    <StackPane fx:id="root"
               AnchorPane.topAnchor="0"
               AnchorPane.bottomAnchor="0"
               AnchorPane.leftAnchor="0"
               AnchorPane.rightAnchor="0">

        <!-- BLURRED BACKGROUND IMAGE -->
        <ImageView fx:id="backgroundImage"
                   fitWidth="1920" fitHeight="1080"
                   preserveRatio="false">
            <image>
                <Image url="/images/register_bg.jpg"/>
            </image>
        </ImageView>

        <!-- DARK OVERLAY -->
        <Rectangle fx:id="darkOverlay"
                   width="1920" height="1080"
                   fill="#00000066"/>

        <!-- WHITE FORM CARD -->
        <VBox fx:id="formCard"
              alignment="TOP_CENTER"
              spacing="18"
              maxWidth="420"
              maxHeight="770"
              styleClass="form-card">

            <!-- YorkU LOGO -->
            <ImageView fx:id="logoImage"
                       fitHeight="60"
                       fitWidth="140">
                <image>
                    <Image url="/images/yorku_logo.png"/>
                </image>
            </ImageView>


            <!-- PAGE TITLE -->
            <Label text="Create Your Account"
                   styleClass="card-title"/>

            <!-- Account Type -->
            <Label text="User Type" styleClass="field-label"/>
            <ComboBox fx:id="typeBox" promptText="Select Type" />

            <!-- Full Name -->
            <Label text="Full Name" styleClass="field-label"/>
            <TextField fx:id="nameField" promptText="Enter your full name"/>

            <!-- Email -->
            <Label text="Email Address" styleClass="field-label"/>
            <TextField fx:id="emailField" promptText="e.g., name@my.yorku.ca"/>

            <!-- Password -->
            <Label text="Password" styleClass="field-label"/>

            <StackPane maxWidth="350">

                <!-- Hidden password -->
                <PasswordField fx:id="passwordField"
                               promptText="Enter a strong password"
                               styleClass="input-field"
                               maxWidth="350"/>

                <!-- Visible password -->
                <TextField fx:id="visiblePasswordField"
                           promptText="Enter a strong password"
                           styleClass="input-field"
                           maxWidth="350"
                           visible="false"
                           managed="false"/>

                <!-- Eye icon -->
                <Button fx:id="showPassBtn"
                        text="ðŸ‘"
                        styleClass="eye-button"
                        StackPane.alignment="CENTER_RIGHT"
                        translateX="-12"/>
            </StackPane>

            <!-- Strength Bar -->
            <ProgressBar fx:id="strengthBar" prefWidth="260"/>
            <Label fx:id="strengthLabel"
                   text="Strength: Weak"
                   styleClass="strength-label"/>

            <!-- Student ID -->
            <Label fx:id="studentIdLbl"
                   text="Student ID"
                   visible="false"
                   styleClass="field-label"/>

            <TextField fx:id="studentIdField"
                       promptText="Your YorkU Student Number"
                       visible="false"/>

            <!-- Buttons -->
            <Button fx:id="registerBtn"
                    text="Create Account"
                    styleClass="register-button"/>

            <Button fx:id="backBtn"
                    text="Back to Login"
                    styleClass="back-button"/>

        </VBox>

    </StackPane>

</AnchorPane>
